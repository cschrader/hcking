- content_for :title do
  Startseite #{@city.name}

- content_for :javascript do
  :javascript
    $(function(){
      $('.carousel').carousel({interval: 8000})
    });

.row
  #head-carousel.carousel.slide.span6
    .carousel-inner
      = render partial: "boxes/carousel_box", collection: @carousel
    %a.carousel-control.left{href:'#head-carousel', data: {slide: "prev"}}
    %a.carousel-control.right{href:'#head-carousel', data: {slide: "next"}}

.row
  - cache ['all_events_calendar', @city.name ] do
    .span6
      = render partial: 'modules/calendars/minical'

.row.content-teasers
  = render partial: "boxes/grid_box", collection: @first_row

.row.content-teasers
  = render partial: "boxes/grid_box", collection: @second_row

