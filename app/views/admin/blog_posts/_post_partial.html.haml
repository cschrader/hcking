= image_tag @blog_post.picture.try(:carousel_image).try(:url)

- if @blog_post.mp3file?
  %audio{src: @blog_post.get_podcast_url, preload: "none"}
    %script
      $('audio').mediaelementplayer(/* Options */);

%h1= @blog_post.headline
%h2= @blog_post.headline_teaser

= image_tag @blog_post.picture.try(:box_image).try(:url)

#teaser
  %p
    %em= @blog_post.teaser_text

#blog_text
  = raw @blog_post.text
