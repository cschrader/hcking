- content_for :title do
  Neuer Vorschlag

%h2= t "suggestions.new.title"

= simple_form_for @suggestion, html: { class: 'form-horizontal' } do |f|
  %p= t "suggestions.new.introduction"

  = f.input :name
  = f.input :occurrence, hint: t("suggestions.new.occurrence_hint")
  = f.input :description, hint: t("suggestions.new.description_hint")
  = f.input :place
  .label :City
  = f.select :city, options_for_select(City.all.map{|c| [c.name,c.id]})
  = f.input :more_as_text, as: :text, hint: t("suggestions.new.more_hint")

  .form-actions
    = f.submit class: 'btn btn-inverse'
    = link_to 'Zur√ºck', root_path, class: 'btn'
