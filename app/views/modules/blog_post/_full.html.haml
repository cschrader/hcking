%article.row.blog_full
  .span4
    .blog_headline_indicator
      = render partial: 'modules/categories/indicator', locals: { submodule: "big", color: blog_post.category.color }
    .blog_headline_black
      .blog_headline_date
        = blog_post.publishable_from.strftime("%Y-%m-%d %H:%M")
        ,
        = link_to blog_post.user.nickname, user_path(blog_post.user)
      %h1.blog_headline_text
        = link_to blog_post.headline, post_path(controller, blog_post.to_link)
    .clear

  .span4.blog_full_text
    = link_to image_tag(blog_post.picture.box_image.url), post_path(controller, blog_post.to_link), class: "blog_image"

    - if blog_post.mp3file?
      .podcast_player
        %audio{src: blog_post.get_podcast_url, preload: "none"}
          %script
            $('audio').mediaelementplayer({audioWidth: 418});
        %p
          %i{class: "icon-download"}
          = link_to "Mp3 Datei", blog_post.get_podcast_url
    %p
      = raw blog_post.teaser_text
    = raw blog_post.text

